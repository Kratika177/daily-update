#include <iostream>
#include <string>
using namespace std;

int main() {
	// Complete the program
    string a;
    string b;
    cin>>a;
    cin>>b;
    cout<<a.size()<<" "<<b.size()<<endl;
    cout<<a+b<<endl;
    char ch=a[0];
    char ch1=b[0];
    a[0]=ch1;
    b[0]=ch;
    cout<<a<<" "<<b;
    return 0;
}
